{
	"extends": "./node_modules/adonis-preset-ts/tsconfig",
	"include": ["**/*"],
	"exclude": ["node_modules", "build"],
	"compilerOptions": {
		"outDir": "build",
		"rootDir": "./",
		"sourceMap": true,
		"paths": {
			"App/*": ["./app/*"],
			"Config/*": ["./config/*"],
			"Contracts/*": ["./contracts/*"],
			"Database/*": ["./database/*"]
		},
		"types": [
			"@adonisjs/core",
			"@adonisjs/repl",
			"@japa/preset-adonis/build/adonis-typings",
			"@adonisjs/session",
			"@adonisjs/view",
			"@adonisjs/lucid",
			"@adonisjs/auth",
			"@adonisjs/ally",
			"@adonisjs/shield",
			"@adonisjs/bouncer",
			"@adonisjs/i18n",
			"@adonisjs/mail",
			"@adonisjs/redis",
			"adonis-request-throttler",
			"adonis-lucid-soft-deletes",
			"@mezielabs/adonis-stripe",
			"@adonisjs/drive-s3",
			"@adonisjs/drive-gcs"
		]
	}
}
